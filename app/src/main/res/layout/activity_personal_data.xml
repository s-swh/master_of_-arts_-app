<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.PersonalDataActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backsebick"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/recfh"
            android:layout_width="17.4dp"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/returnbutton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textColor="#000000"
            android:textSize="22sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_115"
        android:layout_gravity="center"
        android:src="@mipmap/icon_tx" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#666666"
        android:text="点击修改头像" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/sp_12"
    android:background="@drawable/backsebick"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#434343"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="姓名:" />
        <EditText
            android:id="@+id/up_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@android:color/transparent"
            android:text=" " />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#3f3f3f3f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="#434343"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:text="性别:" />
<RadioGroup
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/rp"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/nan"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:checked="true"
        android:text="男" />

    <RadioButton
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content"
        android:text="女" />

</RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#3f3f3f3f" />

    <LinearLayout
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"

            android:textSize="@dimen/sp_12"
            android:textColor="#434343"
            android:text="生日:" />

        <TextView
            android:id="@+id/tt_date"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:text="2020-12-24" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_1"
        android:background="#3f3f3f3f" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Address"
        android:layout_marginTop="@dimen/dp_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="#434343"
            android:text="地区:" />

        <TextView
            android:id="@+id/dq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=" " />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#3f3f3f3f" />
</LinearLayout>
    <Button
        android:id="@+id/upde"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_69"
        android:text="确认修改" />
</LinearLayout>