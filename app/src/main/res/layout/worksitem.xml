<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Detailsofworks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:src="@mipmap/icon_nz"
            android:id="@+id/nz"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_12" />
        <TextView
            android:id="@+id/work_data"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#434343"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="4月5号" />
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgrounbk">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/wdp"
                android:visibility="gone"
                android:src="@mipmap/icon_wdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ydp"

                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_ydp" />

                <TextView
                    android:id="@+id/work_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="夜深人静，万籁俱静。"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:textColor="#434343"
                    android:textSize="@dimen/sp_9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150">
                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:src="@color/red_ed2d32"
                    android:id="@+id/image_1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dp_80" />
                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:src="@color/red_ed2d32"
                    android:id="@+id/image_2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dp_80" />
                <ImageView
                    android:layout_width="@dimen/dp_80"
                    android:src="@color/red_ed2d32"
                    android:id="@+id/image_3"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/dp_80" />
            </LinearLayout>

        </RelativeLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_10"/>
</LinearLayout>