<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.OrderDetails">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/returnbutton"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/details_return"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text="订单详情"
                android:textSize="22sp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/success"
        android:background="@drawable/zhifuchenggongselete"
        android:orientation="vertical"

        android:layout_height="@dimen/dp_90">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_success"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="已支付"
            android:textSize="30sp"
            android:textColor="#ffffff"

            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/tobepaid"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/fai2"
        android:layout_height="@dimen/dp_90">

        <TextView
            android:layout_width="match_parent"
            android:text="待支付"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/cancelselete"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/fail"
        android:layout_height="@dimen/dp_90">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_cancel"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="已取消"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="464dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/backgroundselete"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_height="97dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="江苏省 南京市 雨花区"
            android:id="@+id/tv_Provinceandcity"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="南京南站南广场MM大厦4都606"
            android:id="@+id/tv_address"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="张大大  15005145678"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_namenumber"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgroundselete"
        android:layout_height="wrap_content">
