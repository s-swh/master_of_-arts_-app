                android:layout_width="wrap_content"
                android:text="-¥0.00"
                android:layout_margin="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="实付"
                android:textSize="@dimen/sp_12"
                android:layout_margin="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="¥1399.00"
                android:textSize="@dimen/sp_12"
                android:layout_margin="@dimen/dp_15"
                android:textColor="#FF4747"
                android:id="@+id/tv_pay_price"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/shost"
        android:layout_height="@dimen/dp_35">
        <TextView
            android:layout_width="@dimen/dp_100"
            android:text="去评价"
            android:id="@+id/qpj"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/orderbut"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="@dimen/dp_100" />
        <TextView
            android:layout_width="@dimen/dp_100"
            android:text="查看物流"
            android:id="@+id/ckwl"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"

            android:background="@drawable/orderbut"

            android:layout_marginTop="@dimen/dp_5"
            android:layout_height="@dimen/dp_100" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:id="@+id/shost1"
        android:visibility="gone"
        android:layout_height="match_parent">
        <Button
            android:layout_width="@dimen/dp_120"
            android:text="取消订单"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/quxiaodingdan"
            android:id="@+id/ckwl1"
            android:layout_marginLeft="94.5dp"
            android:layout_alignParentLeft="true"
            android:layout_height="@dimen/dp_25" />
        <Button
            android:layout_width="@dimen/dp_120"
            android:text="立即付款"
            android:background="@drawable/lijifukuan"
            android:id="@+id/qpj1"
            android:layout_marginRight="62.5dp"
            android:textSize="@dimen/sp_12"
            android:textColor="#FFFFFF"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/dp_25" />
    </RelativeLayout>
</LinearLayout>