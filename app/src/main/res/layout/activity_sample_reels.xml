<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SampleReelsActivity">
<ImageView
    android:layout_width="match_parent"
    android:src="@mipmap/icon_wushuju"
    android:id="@+id/reels"
    android:visibility="gone"
    android:layout_height="match_parent" />






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:background="@mipmap/icon_zpj"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/oncDestruction"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/returnbutton" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/weixinfenxiang"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/icon_fx" />

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/dp_80"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:text="黄佟佟"
                    android:textColor="#019A92"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/xrev_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/icon_ewm" />
</RelativeLayout>




</LinearLayout>