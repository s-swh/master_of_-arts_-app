<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.WatchTheReplayActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/lllt"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re_huifang"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="16.15dp"
            android:src="@mipmap/returnbutton"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:id="@+id/return_fn"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="@dimen/dp_17" />
        <TextView
            android:layout_width="wrap_content"
            android:text="回播片段"
            android:textColor="#434343"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_14"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/xrv"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/weba"
   android:visibility="gone"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_finsh"
            android:textSize="@dimen/sp_14"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tuichu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <WebView
        android:layout_width="match_parent"
        android:id="@+id/web"
        android:layout_weight="1"
        android:layout_height="0dp">
    </WebView>

</LinearLayout>

</LinearLayout>