<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.myactivity.My_Course">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:src="@mipmap/returnbutton"
            android:id="@+id/oncDestruction"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:text="我的课程"
            android:textColor="#434343"
            android:textSize="@dimen/sp_12"
            android:gravity="center"
            android:layout_height="@dimen/dp_30" />
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_22"
            android:id="@+id/date"
            android:src="@mipmap/icon_date"
            android:layout_height="@dimen/dp_22" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:id="@+id/wushuju"
    android:visibility="gone"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/icon_wushuju"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="暂无课程"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sp_12"
        android:textColor="#434343"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
</LinearLayout>
  <com.jcodecraeer.xrecyclerview.XRecyclerView
      android:layout_width="match_parent"
      android:id="@+id/my_coursercv"
      android:layout_height="match_parent">
  </com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>