<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsOfWorks">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="17.14dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/returnbutton"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/but_return"
        android:layout_height="@dimen/dp_30" />
    <TextView
        android:layout_width="wrap_content"
        android:text="作品详情"
        android:layout_centerVertical="true"
        android:textColor="#434343"
        android:textSize="@dimen/sp_12"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#434343"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/tv_title"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_15"
        android:text="作品名称：大白鹅" />
    <TextView
        android:layout_width="wrap_content"
        android:text="发布时间：2020-12-12 18:30:22"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_8"
        android:textColor="#999999"
        android:id="@+id/tv_date"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/xrv"
        android:layout_height="@dimen/dp_180">
    </androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:text="作品故事："
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#019A92"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_12"
        android:textColor="#666666"

        android:text="大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅大白鹅"
        android:id="@+id/tv_gu"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="音频介绍："
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="#019A92"
        android:textSize="@dimen/sp_12"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="wrap_content"
        android:text="播放"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/bton"
        android:layout_height="wrap_content" />
</LinearLayout>