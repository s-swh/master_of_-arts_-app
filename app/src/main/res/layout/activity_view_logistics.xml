<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".payment.ViewLogistics">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="17.14dp"
        android:src="@mipmap/returnbutton"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/view_return"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:layout_height="42dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="物流详情"
        android:textSize="@dimen/sp_20"
        android:gravity="center"

        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/courseselete"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_59"
            android:src="@mipmap/icon_wli"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_44" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">


       <LinearLayout
           android:layout_width="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dp_5"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:text="承运公司："
               android:textColor="#999999"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_width="match_parent"
               android:text=""
               android:id="@+id/CarrierCompany"
               android:layout_height="wrap_content" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="快递单号："
                android:textColor="#999999"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:id="@+id/ExpressNumber"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/view_recy"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>