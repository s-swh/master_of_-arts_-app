<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/find_hyh"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="精选作品"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_29"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="更多"

                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:scrollbarSize="@dimen/sp_12"

                android:layout_centerVertical="true"
                android:textColor="#019A92"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_gre_1"

            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/find_gd"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="录播课程"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_29"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="更多"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:scrollbarSize="@dimen/sp_12"

                android:layout_centerVertical="true"
                android:textColor="#019A92"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_gre_2"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/find_mfgd"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="公益课程"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_29"
                android:textColor="#000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="更多"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:scrollbarSize="@dimen/sp_12"
                android:layout_centerVertical="true"
                android:textColor="#019A92"

                android:layout_height="wrap_content" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_gre"

            android:isScrollContainer="true"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    </ScrollView>
</LinearLayout>