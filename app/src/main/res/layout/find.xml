<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="发现"
            android:textSize="@dimen/sp_19"
            android:textColor="#434343"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/find_hyh"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="精选作品"

                    android:textColor="#434343"
                    android:textSize="@dimen/dp_15" />
                <RelativeLayout
                    android:layout_width="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@mipmap/icon_bjtm"
                    android:layout_height="@dimen/dp_15"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gre_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5" />

            <RelativeLayout
                android:id="@+id/find_gd"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="录播课程"

                    android:textColor="#434343"
                    android:textSize="@dimen/dp_15" />
                <RelativeLayout
                    android:layout_width="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@mipmap/icon_bjtm"
                    android:layout_height="@dimen/dp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/dp_15"

                    android:scrollbarSize="@dimen/sp_12"
                    android:text="更多"
                    android:textColor="#434343" />
                <ImageView
                    android:layout_width="11.43dp"
                    android:src="@mipmap/rightbut"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:layout_height="12dp" />
            </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_gre_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5" />
</RelativeLayout>


            <RelativeLayout
                android:id="@+id/find_mfgd"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="公益课程"

                    android:textColor="#434343"
                    android:textSize="@dimen/dp_15" />
                <RelativeLayout
                    android:layout_width="@dimen/dp_60"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@mipmap/icon_bjtm"
                    android:layout_height="@dimen/dp_15"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"

                    android:layout_marginRight="@dimen/dp_15"
                    android:scrollbarSize="@dimen/sp_14"
                    android:text="更多"
                    android:textColor="#434343" />
                <ImageView
                    android:layout_width="11.43dp"
                    android:src="@mipmap/rightbut"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_8"
                    android:layout_alignParentRight="true"
                    android:layout_height="12dp" />
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:descendantFocusability="blocksDescendants"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gre"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:isScrollContainer="true" />
        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>