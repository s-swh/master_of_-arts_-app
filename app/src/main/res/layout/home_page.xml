<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_tongzhi" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_tz_y" />
        <TextView
            android:layout_width="wrap_content"
            android:text="健康快乐的小..."
            android:textSize="12sp"
            android:id="@+id/set_setlt"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:textColor="#CE000000"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <com.stx.xhb.xbanner.XBanner
        android:id="@+id/xbn"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/dp_15"
        android:scaleType="fitXY"
        app:AutoPlayTime="3000"
        android:layout_marginTop="@dimen/dp_10"
        app:isClipChildrenMode="true"
        app:isShowNumberIndicator="true"
        app:pointTopBottomPadding="@dimen/dp_10"
        app:pointsPosition="RIGHT"
        app:tipTextColor="#ccf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15.5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/dp_175"
            android:layout_height="@dimen/dp_150"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@mipmap/icon_left_lf"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_42"
                android:text=" "
                android:textColor="#434343" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_5"
                android:text=" "
                android:textColor="#A5A1A1" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_5"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="@dimen/dp_175"
            android:layout_height="@dimen/dp_150"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@mipmap/icon_right_ri"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_42"
                android:text=""
                android:textColor="#434343" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="#A5A1A1" />
        </LinearLayout>
    </LinearLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >
            <ImageView
                android:id="@+id/ivc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@mipmap/icon_yhx" />
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_65"
                android:text="  "
                android:textColor="#FD0808"
                android:textSize="@dimen/sp_16" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>