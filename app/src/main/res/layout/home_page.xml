<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/xbn"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    app:AutoPlayTime="3000"
                    app:isClipChildrenMode="true"
                    app:isShowNumberIndicator="true"
                    app:pointTopBottomPadding="@dimen/dp_10"
                    app:pointsPosition="RIGHT"
                    app:tipTextColor="#ccf" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/tz"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_height="wrap_content" />
                <com.wd.master_of_arts_app.customview.MarqueeTextView
                    android:layout_width="match_parent"
                    android:text="健康快乐的小..."
                    android:textSize="12sp"
                    android:textColor="#CE000000"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:layout_alignParentLeft="true"
                    android:layout_height="@dimen/dp_15" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_35"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="@dimen/dp_175"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/backgroundselectionleft"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="最新作品展示"
                       android:textColor="#434343"
                        android:layout_marginTop="@dimen/dp_42"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="作者：六六"
                        android:textColor="#A5A1A1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="@dimen/dp_250"
                            android:text="立即前往"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/backgroundbuttonleft"
                            android:textColor="#FF4747"
                            android:layout_height="@dimen/dp_53" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_5"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="@dimen/dp_175"
                    android:layout_height="@dimen/dp_150"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/backgroundselectionright"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="最新作品展示"
                        android:textColor="#434343"
                        android:layout_marginTop="@dimen/dp_42"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="作者：六六"
                        android:textColor="#A5A1A1"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_32"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_width="@dimen/dp_250"
                            android:text="立即前往"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_marginBottom="@dimen/dp_15"
                            android:background="@drawable/backgroundbuttonleft"
                            android:textColor="#FF4747"
                            android:layout_height="@dimen/dp_53" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dp_110"
            android:background="@drawable/backgroundleft"
           android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_130">
            <TextView
                android:layout_width="90dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:text="2020-12-12"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"
                android:text="16:20"
                android:layout_gravity="center"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="48dp"
                android:layout_gravity="center"
                android:layout_height="44dp"
                android:text="第十课
书法班"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:paddingTop="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:contextClickable="true"
            android:layout_gravity="center"

            android:layout_centerVertical="true"
            android:src="@mipmap/icon_yuanzuitu"
            android:layout_height="@dimen/dp_150" />
        <TextView
            android:id="@+id/tt_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:text="预约体验"
            android:paddingTop="@dimen/dp_25"
            android:textColor="#FD0808"
            android:textSize="@dimen/sp_16" />
        <LinearLayout
            android:layout_width="@dimen/dp_110"
            android:background="@drawable/backgroundright"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_height="@dimen/dp_130">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_gravity="center"
                android:src="@mipmap/icon_yuanzuitu"
                />
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="天天老师
-任课老师-
路老师"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>