<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/mycourse"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@mipmap/beijing"
                android:scaleType="fitXY"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="【暑假课】自由式涂鸦训练"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_15"
                android:textSize="@dimen/sp_12"
                android:id="@+id/my_tile"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="@dimen/dp_45"
                android:background="@drawable/coursecheck"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_20">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#019A92"
                    android:id="@+id/sort_num"
                    android:text="第六课"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="19:30-20:30"

                android:layout_gravity="center_vertical"
                android:textColor="#F3F3F3"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_50"
                android:id="@+id/myte"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_65"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:src="@mipmap/ic_launcher"
                    android:id="@+id/my_iv"

                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="王大大老师"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="12sp"
                    android:id="@+id/my_name"
                    android:textColor="#ffffffff"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="@dimen/dp_69"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/coursecheck"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_height="@dimen/dp_20">
                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/sp_12"
                            android:textColor="#019A92"
                            android:text="查看课程 >"
                            android:id="@+id/Viewcoursedetails"

                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"

        android:layout_height="@dimen/dp_15"/>

</LinearLayout>
