<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/dimensfinsqx"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:background="#434343"
            android:layout_height="@dimen/dp_1"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:id="@+id/weixinhaoyou"
    android:layout_height="@dimen/dp_50">
    <ImageView
        android:layout_width="wrap_content"
        android:src="@mipmap/icon_wx"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="分享微信好友\t\t"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_35"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#434343"
            android:layout_height="@dimen/dp_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/weixinpengyouquan"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_pyq"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="分享微信朋友圈"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_35"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#434343"
            android:layout_height="@dimen/dp_1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/dimensfins"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:layout_width="wrap_content"
                android:text="取消"
                android:layout_centerVertical="true"
                android:textColor="#434343"
                android:textSize="@dimen/sp_12"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>