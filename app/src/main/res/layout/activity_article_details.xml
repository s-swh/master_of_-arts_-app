<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ArticleDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_17"
            android:src="@mipmap/returnbutton"
            android:id="@+id/article_fh"
            android:layout_margin="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:text="作品详情"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<ImageView
    android:layout_width="match_parent"
    android:id="@+id/article_iv"
    android:layout_height="@dimen/dp_180" />
    <TextView
        android:layout_width="wrap_content"
        android:text="购物车"
        android:id="@+id/artice_tv"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:id="@+id/artice_date"
        android:text="2020-12-31 10:38:47"
        android:layout_height="wrap_content" />
</LinearLayout>