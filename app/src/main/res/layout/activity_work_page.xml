<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundwork"
    tools:context=".activity.WorkPage">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="17.14dp"
            android:src="@mipmap/returnbutton"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/tv_return"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:layout_width="match_parent"
            android:text="作业详情"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/sp_22"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="已点评"
            android:id="@+id/tv_no"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textSize="@dimen/sp_12"
            android:textColor="#019A92"
            android:layout_height="wrap_content" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:text="作品名称："
        android:id="@+id/work_name"
        android:layout_marginTop="@dimen/dp_15"

        android:textColor="#333333"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="发布时间：2020-12-12 18:30:22"
        android:textColor="#999999"
        android:textSize="@dimen/sp_12"
        android:id="@+id/work_time"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
         android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:id="@+id/work_one"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_50" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:text="作品故事："
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#019A92"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="音频介绍："
        android:textColor="#019A92"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="@dimen/dp_45"
        android:src="@mipmap/icon_yysc"
        android:id="@+id/iv_voive"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="@dimen/dp_25" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:id="@+id/work_iv"
            android:src="@mipmap/icon_wdp"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="150dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="点评详情"
            android:textColor="#019A92"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_etch_content"
            android:text="晓晓宝贝今天晚上有点害羞呀，但创作的时候还是很认真的哦，大白鹅的种类还是蛮多的，有肥瘦高低之分，希望你能大胆一点，主动和老师交流你的想法。"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:text="点评时间：202012-12 12:30:20"
            android:id="@+id/teacher_time"
            android:textColor="#999999"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="音频点评："
            android:textColor="#019A92"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="@dimen/dp_45"
            android:src="@mipmap/icon_yysc"
            android:id="@+id/iv_voive1"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_15" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_15"/>
    </LinearLayout>
</LinearLayout>