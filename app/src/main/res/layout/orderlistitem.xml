<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/precode"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/orderselected"
    android:layout_height="@dimen/dp_155">
<TextView
    android:layout_width="wrap_content"
    android:text="订单号"
    android:textColor="#434343"
    android:id="@+id/order_number"
    android:textSize="@dimen/sp_14"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_delete"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_19"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_delete" />

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="@dimen/dp_110"
        android:id="@+id/order_iv"
        android:src="@drawable/ic_launcher_background"
        android:layout_height="@dimen/dp_110" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="【暑假课】自由涂鸦训练"
            android:textSize="@dimen/sp_12"
            android:id="@+id/order_title"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="课程章节"
                    android:textColor="#999999"
                    android:id="@+id/order_date1"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="上课时间"
                android:textColor="#999999"
                android:id="@+id/order_date2"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
            </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="¥199.00"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#FF4747"
            android:id="@+id/order_money"
            android:layout_height="wrap_content" />
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dp_100"
            android:text="取消订单"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_115"
            android:layout_alignParentRight="true"
            android:background="@drawable/orderbut"
            android:id="@+id/order_qxdd"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_25" />
        <TextView
            android:layout_width="@dimen/dp_100"
            android:text="查看物流"
            android:visibility="gone"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_115"
            android:layout_alignParentRight="true"
            android:background="@drawable/orderbut"
            android:id="@+id/order_ckwl"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_25" />
        <TextView
            android:layout_width="@dimen/dp_100"
            android:text="已完成"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:background="@drawable/orderbut"
            android:id="@+id/order_but"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_25" />
    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
    </RelativeLayout>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"/>
</LinearLayout>