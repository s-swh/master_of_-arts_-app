<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payment.SignUpNow">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="17.4dp"

        android:src="@mipmap/returnbutton"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_height="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:text="提交订单"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/deltfinsh"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/dp_5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#E7E7E7"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30">
            <TextView
                android:layout_width="wrap_content"
                android:text="收货地址"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="未选择收货地址"
                android:id="@+id/SelectDelivery"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_fqx"
            android:layout_height="@dimen/dp_2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal"
                android:background="#ffffff"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_50"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/dd_img"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="@dimen/dp_50" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="【暑假课】自由涂鸦训练"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:id="@+id/dd_title"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:id="@+id/dd_date"
                        android:text="6课时；周六19:00-20:30"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="¥199.00"
                        android:id="@+id/dd_money"
                        android:textColor="#FF4747"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="商品金额"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="199.00￥"
                    android:id="@+id/dd_zfmoney"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="运费"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0.00￥"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="折扣"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="0.0￥"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#E7E7E7"
            android:layout_height="@dimen/dp_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="支付方式"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/zhifubaozhifu"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_28"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/icon_zfb"
                    android:layout_height="@dimen/dp_28" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="支付宝支付"
                    android:textColor="#666666"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:id="@+id/y"
                android:visibility="gone"
                android:src="@mipmap/icon_zhifuchenggong"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerInParent="true"
                android:id="@+id/n"

                android:src="@mipmap/icon_zhifushibai"
                android:layout_height="wrap_content" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/weixinzhifu"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="15dp"
                        android:src="@mipmap/icon_weixin"
                        android:layout_height="@dimen/dp_28" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="微信支付"
                        android:textColor="#666666"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_zhifushibai"
                    android:id="@+id/c"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:id="@+id/b"
                    android:src="@mipmap/icon_zhifuchenggong"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="￥199.00"
                    android:textColor="#FF4747"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:text="立即支付"
                    android:id="@+id/but_zf"
                    android:background="@drawable/zhifu"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>