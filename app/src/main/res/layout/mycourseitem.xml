<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/mycourse"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_60"
        android:background="@drawable/coursecheck"
        android:layout_margin="@dimen/dp_15"
        android:layout_height="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            android:textColor="#019A92"
            android:id="@+id/sort_num"
            android:text="第六课"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:layout_width="@dimen/dp_400"
        android:text="【暑假课】自由式涂鸦训练"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/my_tile"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="19:30-20:30"
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="#ffffff"
            android:id="@+id/myte"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/my_iv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="@dimen/dp_50" />
        <TextView
            android:layout_width="wrap_content"
            android:text="王大大老师"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="12sp"
            android:id="@+id/my_name"
            android:textColor="#ffffffff"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="@dimen/dp_129"
                android:layout_alignParentRight="true"
                android:background="@drawable/coursecheck"
                android:layout_margin="@dimen/dp_15"
                android:layout_height="@dimen/dp_30">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_20"
                    android:textColor="#019A92"
                    android:text="查看课程 >"
                    android:id="@+id/Viewcoursedetails"

                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
<View
    android:layout_width="match_parent"

    android:layout_height="@dimen/dp_15"/>
</LinearLayout>
