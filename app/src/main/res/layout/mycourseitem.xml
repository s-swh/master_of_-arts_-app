<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/mycourse"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/dp_400"
        android:text="【暑假课】自由式涂鸦训练"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/my_tile"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
                android:text="48节课"
            android:visibility="gone"
            android:id="@+id/my_kj"
                android:textColor="#019A92"
           android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="15sp"
            android:background="@drawable/mycoursebut"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:text="2020-8-8 每周五19:30-20:30"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="#ffffff"
        android:id="@+id/myte"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_50"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/my_iv"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_height="@dimen/dp_50" />
        <TextView
            android:layout_width="wrap_content"
            android:text="王大大老师"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_15"
            android:textSize="12sp"
            android:id="@+id/my_name"
            android:textColor="#ffffffff"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="查看课程"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_40"
                android:textColor="#019A92"
                android:id="@+id/Viewcoursedetails"
                android:background="@drawable/mycoursexq"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
